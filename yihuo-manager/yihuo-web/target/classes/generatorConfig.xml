<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <!-- <classPathEntry location="/Program Files/IBM/SQLLIB/java/db2java.zip" /> -->
	
  <context id="DB2Tables" targetRuntime="MyBatis3">
  <!--指定如何连接到指定数据库-->
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://127.0.0.1:3306/news"
        userId="root"
        password="123">
    </jdbcConnection>
	<!--定义解析器，是否强制转换-->
    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>
	<!--指定Javabean的生成策略-->
    <javaModelGenerator targetPackage="com.jinglun.news.entity" targetProject=".\src">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>
	<!--sql映射文件定义-->
    <sqlMapGenerator targetPackage="com.jinglun.news.dao"  targetProject=".\src">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>
	<!--如何使用构建器构建接口以及类-->
    <javaClientGenerator type="XMLMAPPER" targetPackage="com.jinglun.news.dao"  targetProject=".\src">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>
	<!--根据表生成-->
    <table tableName="news_detail" domainObjectName="News" >
    
    
    
    </table>
    <table tableName="news_comment" domainObjectName="Newscomment" >
    
    </table>
  </context>
</generatorConfiguration>